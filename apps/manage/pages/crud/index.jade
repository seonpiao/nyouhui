block append title

block append meta

block append stylesheet
  link(href='/plugins/dynatable/jquery.dynatable.css', rel='stylesheet', type='text/css')

block append headjs

block append content
  // Main content
  section.content
    div
      //- - var data = result.data[result.db][result.collection];
      - var schema = result;
      - var params = {};
      - try{params = JSON.parse(schema.params)}catch(e){}
      - var options = {fields:schema.fields}
      - for(var key in params){options[key] = params[key]}
      +manage_table(null,options)
      if !params.readonly
        .form-group
          a.btn.btn-primary(href="/crud/" + result.db + "/" + result.collection + "/create") 新建
    +manage_box()

block append pluginjs
  // DATA TABES SCRIPT
  script(src='/plugins/dynatable/jquery.dynatable.js')

