block append content
  // Main content
  section.content
    form(role="form",data-module="manage_form",data-url='/user/modifyPwd')
      div
        +manage_ctrl_input({
          name:'_id',
          type:'hidden',
          value:__global.uid
        })
        +manage_ctrl_input({
          label:'旧密码',
          name:'password',
          type:'password'
        })
        +manage_ctrl_input({
          label:'新密码',
          name:'new_password',
          type:'password'
        })
      +manage_box({
        title:'修改密码'
      })
      .form-group
        button.btn.btn-primary.btn-schema-add(type="submit") 确定
        | 
        a.btn.btn-default.btn-cancel 取消

block append pluginjs
  // DATA TABES SCRIPT
  script(src='/plugins/datatables/jquery.dataTables.js')
