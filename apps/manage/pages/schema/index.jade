block append content
  // Main content
  section.content
    div
      - var data = result.data[result.db][result.collection];
      +manage_table(data,{
        fields:[{
          name:'db',
          alias:'数据库',
          display:'yes'
        },{
          name:'collection',
          alias:'表名',
          display:'yes'
        }]
      })
      .form-group
        a.btn.btn-primary(href="/schema/create") 新建
    +manage_box()

