mixin manage_ctrl_autocomplete(options)
  .form-group(data-module="manage_ctrl_autocomplete",data-form-control="autocomplete",data-db=options.db,data-collection=options.collection)
    if options.label
      label= options.label
    if options.editable === 'required'
      span.text-red *
    input.form-control(type="text", name=options.name, value=(options.value || ''),required=(options.editable === 'required'))