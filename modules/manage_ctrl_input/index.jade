mixin manage_ctrl_input(options)
  .form-group(data-module="manage_ctrl_input",data-form-control="input")
    if options.label
      label= options.label
    if options.required === 'yes'
      span.text-red *
    input.form-control(type=(options.type || "text"), placeholder=options.placeholder || '', name=options.name, value=(options.value || ''),required=(options.required === 'yes'))