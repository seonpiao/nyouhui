mixin manage_ctrl_continue(options)
  .form-group(data-module="manage_ctrl_continue",style="display:" + (options.hidden ? 'none' : ''))
    if options.label
      label= options.label
    if options.editable === 'required'
      span.text-red *
    input(type="checkbox", checked=(options.value === '1'),data-form-continue)