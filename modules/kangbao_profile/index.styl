.kangbao_profile
  display:block
  height:100%
  .screen
    position:relative
    height:100%
    width:100%
    overflow:hidden
    .background
      position:absolute
      top:50%
      margin-top:-252px
      background-size:100%
      width:320px
      height:504px
      left:50%
      margin-left:-160px
    .content
      position:absolute
      top:0
      height:100%
      width:100%
  .screen1
    .placeholder
      background-image:url($bgUrl + 'dist/images/m/kangbao_upload_placeholder.png')
      background-size:100%
      width:240px
      height:240px
      position:absolute
      top:97px
      left:50%
      margin-left:-120px
    .show-you-me
      position:absolute
      left:15px
      top:15px
      text-transform: capitalize
      color:#1f1f1f
    .edit-name
      position:absolute
      bottom:116px
      right:0
      border-right:14px solid #ff6100
      height:14px
      width:96px
      input
        width: 100%
        border: 0 none
        height: 14px
        line-height: 14px
        font-size: 14px
        vertical-align: top;
    .edit-no
      position:absolute
      bottom:75px
      right:0
      border-right:14px solid #ff6100
      height:14px
      width:123px
      input
        width: 100%
        border: 0 none
        height: 14px
        line-height: 14px
        font-size: 14px
        vertical-align: top;
    .kangbao
      color:#1f1f1f
      position:absolute
      left:20px
      bottom:15px
  .screen2
    .preview
      transform:scale(0.5)
      height:100%
      margin-top:-50px
      .background
        background-image:url($bgUrl + 'dist/images/m/photo.png')
        transform(scale(.6))
        .mask
          height:100%
          background:url($bgUrl + 'dist/images/m/mask.png')
          background-size:100%
      .kangbao-info
        position:absolute
        top:20px
        right:15px
        width:79px
        height:40px
        background-image:url($bgUrl + 'dist/images/m/kangbao_info.png')
        background-size:100%
      .self-desc
        height:40px
        width:200px
        background:rgba(#ff6100,.65)
        bottom:65px
        position:absolute
        line-height:40px
        text-align:center
        color:white
        left:0px
      .bg
        position:absolute
        bottom:0
        height:65px
        width:226px
        background:rgba(#000,.5)
        left:0px
      .at-kangbao
        position:absolute
        bottom:37px
        width:193px
        height:16px
        left:15px
        background-image:url($bgUrl + 'dist/images/m/at_kangbao.png')
        background-size:100%
        left:0px
    .text
      text-align:center
      position:absolute
      width:100%
      bottom:150px
    .btns
      position:absolute
      bottom:50px
      width:100%
      text-align:center
      .reupload
        display:inline-block
        width:123px
        height:40px
        border-radius:4px
        border:1px solid #ff6100
        line-height:40px
        margin-right:25px
        color:#ff6100
      .share
        display:inline-block
        width:123px
        height:40px
        border-radius:4px
        border:1px solid #ff6100
        background:#ff6100
        line-height:40px
        color:white
    .share-mask
      width:100%
      height:100%
      position:absolute
      top:0
      left:0
      background-image:url($bgUrl + 'dist/images/m/share_mask.png')
      background-size:100%