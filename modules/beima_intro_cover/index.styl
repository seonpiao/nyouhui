.beima_intro_cover
  display:block
  background:url($bgUrl + 'dist/images/m/cover.jpg')
  background-size:100%
  height:100%
  position:relative
  .sign-up-btn
    height:45px
    width:264px
    line-height:45px
    font-size:1.2em
    background:$themeColor
    border-radius:5px
    display:block
    position:absolute
    bottom:35px
    color:white
    left:50%
    margin-left:-132px
    text-align:center
  .arrow
    background:url($bgUrl + 'dist/images/m/arrow.png')
    background-size:100%
    width:40px
    height:34px
    position:absolute
    display:block
    bottom:0
    left:50%
    margin-left:-20px