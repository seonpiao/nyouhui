li.form-group
  .row.field-item
    - var yesorno = {no:'否',yes:'是'}
    .col-xs-2
      label 字段名
      input.form-control(type="text",name="field_name",value=(field ? field.name : ''))
    .col-xs-2
      label 别名
      input.form-control(type="text",name="field_alias",value=(field ? field.alias : ''))
    .col-xs-2
      label 控件
      select.form-control(type="text",name="field_type")
        each control in controls
          option(value=(control.id||control._id.toString()),selected=((field && field.type === (control.id||control._id.toString())) || (!field && control.name === 'input')))= control.name
    .col-xs-1
      label 索引
      select.form-control(type="text",name="field_index")
        - var indexTypes = {no:'否',yes:'是',unique:'唯一索引'}
        each title,value in indexTypes
          option(value=value,selected=(field && field.index === value))= title
    .col-xs-1
      label 显示
      select.form-control(type="text",name="field_display")
        each title,value in yesorno
          option(value=value,selected=(field && field.display === value))= title
    .col-xs-1
      label 编辑
      select.form-control(type="text",name="field_editable")
        - var editable = {'yes':'可编辑','required':'必填',no:'不可编辑','hidden':'隐藏',onlynew:'仅新建'}
        each title,value in editable
          option(value=value,selected=(field && field.editable === value))= title
    .col-xs-1
      label 默认值
      input.form-control(type="text",name="field_defaults",value=(field ? field.defaults : ''))
    .col-xs-1
      label(style="text-align:center;display:block;") 模板
      div(style="line-height:30px;text-align:center;")
        input.cbx-template(type="checkbox",name="field_customtmpl",value=((field && field.customtmpl == '1') ? '1' : '0'), checked=((field && field.customtmpl == '1')))
    .col-xs-12(style=((field && field.customtmpl == '1') ? '' : "display:none"))
      label 模板
      textarea(name="field_template",rows="10").form-control= (field ? field.template : '')