.kangbao_show
  height:100%
  display:block
  // display:none
  *
    transition(all .2s ease-out)
  .screen
    position:relative
    height:100%
    width:100%
    overflow:hidden
    .background
      position:absolute
      top:50%
      margin-top:-252px
      background-size:100%
      width:320px
      height:504px
      left:50%
      margin-left:-160px
    .content
      position:absolute
      top:0
      height:100%
      width:100%
  .screen1
    .background
      background-image:url($bgUrl + 'dist/images/m/photo.png')
      transform(scale(.6))
      .mask
        height:100%
        background:url($bgUrl + 'dist/images/m/mask.png')
        background-size:100%
    .kangbao-info
      position:absolute
      top:20px
      right:15px
      width:79px
      height:40px
      background-image:url($bgUrl + 'dist/images/m/kangbao_info.png')
      background-size:100%
    .self-desc
      height:40px
      width:200px
      background:rgba(#ff6100,.65)
      bottom:65px
      position:absolute
      line-height:40px
      text-align:center
      color:white
      left:-200px
    .bg
      position:absolute
      bottom:0
      height:65px
      width:226px
      background:rgba(#000,.5)
      left:-226px
    .at-kangbao
      position:absolute
      bottom:37px
      width:193px
      height:16px
      left:15px
      background-image:url($bgUrl + 'dist/images/m/at_kangbao.png')
      background-size:100%
      left:-193px
  .screen2
    opacity:0
    .background
      background-image:url($bgUrl + 'dist/images/m/hereiskangbao.jpg')
      background-size:100%
  .screen3
    .background
      background-image:url($bgUrl + 'dist/images/m/daka_bg.png')
      background-size:100%
    .daka-title
