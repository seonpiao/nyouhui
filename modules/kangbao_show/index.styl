      width:100%
      height:227px
      position:absolute
      left:-100%
  .screen5
    .pic
      background-image:url($bgUrl + 'dist/images/m/big_photo.png')
      background-size:100%
      margin:20px auto 0
      width:280px
      height:280px
    .title
      line-height:70px
      text-align:center
      font-size:1.2em
    p
      margin:0 20px
      opacity:0
      .num
        display:inline-block
        width:100px
        text-align:right
        color:#ff6000
      .desc
        padding-left:12px
    .share-panel
      display:none
      position:absolute
      width:100%
      height:100%
      background:rgba(#000,.5)
      .btns
        text-align:center
        height:90px
        width:100%
        position:absolute
        top:50%
        margin-top:-45px
        .btn-replay
          background-image:url($bgUrl + 'dist/images/m/btn_replay.png')
          background-size:100%
          width:90px
          height:90px
          margin-right:40px
          display:inline-block
        .btn-share
          background-image:url($bgUrl + 'dist/images/m/btn_share.png')
          background-size:100%
          width:90px
          height:90px
          display:inline-block
  .scroll-up
    width:26px
    height:14px
    position:absolute
    bottom:15px
    left:50%
    margin-left:-13px
    background-size:100%
    &.scroll-up-white
      background-image:url($bgUrl + 'dist/images/m/scroll_up_white.png')
    &.scroll-up-orange
      background-image:url($bgUrl + 'dist/images/m/scroll_up_orange.png')