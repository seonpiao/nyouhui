mixin manage_ctrl_select(options)
  .form-group(data-module="manage_ctrl_select",data-form-control="select",data-db=options.db,data-collection=options.collection)
    if options.label
      label= options.label
    select.form-control(name=options.name,data-value=options.value)
      if options.none
        option= option.none