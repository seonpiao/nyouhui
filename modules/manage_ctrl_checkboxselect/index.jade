mixin manage_ctrl_checkboxselect(options)
  .form-group(data-module="manage_ctrl_checkboxselect",data-form-control="checkboxselect")
    if options.label
      label= options.label
    if options.editable === 'required'
      span.text-red *
    input(type="checkbox",name=options.name, checked=(options.value === '1'))